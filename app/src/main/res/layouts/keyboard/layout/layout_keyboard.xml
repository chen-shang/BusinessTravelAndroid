<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <!--    键盘头部    -->
    <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="45dp">

        <EditText
                android:id="@+id/EditText_Remark"
                android:layout_width="0dp"
                android:layout_height="25dp"
                app:drawableStartCompat="@drawable/ic_keyboard_remark"
                android:hint="点击写备注"
                android:drawablePadding="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:background="@null"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                >
        </EditText>

        <TextView
                android:id="@+id/TextView_Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0.00"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAlignment="textEnd"
                android:layout_marginEnd="20dp"
                />

        <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/TextView_PayType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:checked="true"
                app:kswBackColor="@color/selector_bottom"
                app:kswTextAdjust="-2dp"
                app:kswTextExtra="8dp"
                app:kswTextOff="收入"
                app:kswTextOn="支出"
                android:layout_marginEnd="20dp"
                app:kswThumbColor="@color/white"/>
    </LinearLayout>
    <!--横线-->
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@color/gray"/>
    <!--小键盘-->
    <com.yanzhenjie.recyclerview.SwipeRecyclerView
            android:id="@+id/RecyclerView_Keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</LinearLayout>
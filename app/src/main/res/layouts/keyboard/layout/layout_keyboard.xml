<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="vertical">
    <!--    键盘头部    -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/EditText_Remark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxWidth="250dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:drawableStartCompat="@drawable/icon_beizhu"
                android:hint="点击写备注..."
                android:drawablePadding="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:maxLines="1"
                android:ellipsize="end"
                android:background="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintEnd_toStartOf="@+id/TextView_PayType"
                app:layout_constraintHorizontal_bias="0.0"
                >
        </EditText>

        <TextView
                android:id="@+id/TextView_PayType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支出"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:drawableStartCompat="@drawable/icon_shouye"
                android:drawablePadding="3dp"
                app:layout_constraintEnd_toStartOf="@+id/TextView_Amount"
                android:layout_marginEnd="20dp"/>

        <TextView
                android:id="@+id/TextView_Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0.00"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAlignment="textEnd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                app:layout_constraintVertical_bias="0.5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--横线-->
    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@color/gray"/>
    <!--小键盘-->
    <com.yanzhenjie.recyclerview.SwipeRecyclerView
            android:id="@+id/RecyclerView_Keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</LinearLayout>
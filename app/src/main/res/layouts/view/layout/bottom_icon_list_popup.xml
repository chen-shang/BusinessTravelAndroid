<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <com.business.travel.app.view.ContentBar
            android:id="@+id/topTitleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:content_bar_title="选择分类"
            app:content_bar_left_icon="@drawable/ic_base_return_gray"
            app:content_bar_right_icon="@drawable/ic_base_right_gray"
            />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <cn.mtjsoft.www.gridviewpager_recycleview.GridViewPager
                android:id="@+id/GridViewPager_MemberIconList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >
        </cn.mtjsoft.www.gridviewpager_recycleview.GridViewPager>
    </ScrollView>
</LinearLayout>
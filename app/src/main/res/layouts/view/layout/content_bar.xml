<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height">

    <ImageView
            android:id="@+id/content_bar_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/top_height"
            android:maxHeight="@dimen/top_height"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:layout_constraintHeight_max="@dimen/top_height"
            app:layout_constraintWidth_max="@dimen/top_height"
            android:clickable="true"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/content_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/topTextSize"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/content_bar_left_icon"
            android:layout_marginStart="5dp"/>

    <ImageView
            android:id="@+id/content_bar_right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/top_height"
            android:maxHeight="@dimen/top_height"
            app:layout_constraintHeight_max="@dimen/top_height"
            app:layout_constraintWidth_max="@dimen/top_height"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_base_other"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
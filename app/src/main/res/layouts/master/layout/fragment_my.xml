<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.my.fragment.MyFragment"
        android:orientation="vertical">

    <!--  顶部自定义标题栏  -->
    <com.business.travel.app.view.ContentBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:content_bar_left_icon="@drawable/ic_me_top"
            app:content_bar_title="@string/title_my"
            app:content_bar_title_color="@color/gray"
            />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/listHeaderViewHeight"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:clickable="false"
                android:layout_margin="3dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="10dp"
                android:id="@+id/cardView">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/corners_shape_change"
                    android:orientation="vertical">

                <!--                <androidx.constraintlayout.widget.ConstraintLayout-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="match_parent"-->
                <!--                        android:layout_weight="1"-->
                <!--                        android:baselineAligned="false">-->

                <!--                    <ImageView-->
                <!--                            android:id="@+id/circleImageView"-->
                <!--                            android:layout_width="@dimen/top_height"-->
                <!--                            android:layout_height="@dimen/top_height"-->
                <!--                            android:src="@drawable/ic_me"-->
                <!--                            android:background="@drawable/corners_shape_unselect"-->
                <!--                            app:layout_constraintBottom_toBottomOf="parent"-->
                <!--                            app:layout_constraintTop_toTopOf="parent"-->
                <!--                            android:layout_marginStart="24dp"-->
                <!--                            app:layout_constraintStart_toStartOf="parent"/>-->

                <!--                    <TextView-->
                <!--                            android:layout_width="wrap_content"-->
                <!--                            android:layout_height="wrap_content"-->
                <!--                            android:text="奔驰的心"-->
                <!--                            android:textSize="20sp"-->
                <!--                            android:textColor="@color/black"-->
                <!--                            app:layout_constraintStart_toEndOf="@+id/circleImageView"-->
                <!--                            app:layout_constraintBottom_toBottomOf="parent"-->
                <!--                            app:layout_constraintTop_toTopOf="parent"-->
                <!--                            android:layout_marginStart="36dp"-->
                <!--                            />-->
                <!--                </androidx.constraintlayout.widget.ConstraintLayout>-->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="1">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1"
                            >

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/totalTravelDay"
                                android:hint="0"
                                android:textColor="@color/gray"
                                android:textColorHint="@color/gray"
                                android:gravity="center"
                                >
                        </TextView>

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="差旅总天数"
                                android:textColor="@color/gray"
                                android:textColorHint="@color/gray"
                                android:gravity="center"
                                >
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1"
                            >


                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="0"
                                android:id="@+id/totalBillCount"
                                android:textColor="@color/gray"
                                android:textColorHint="@color/gray"
                                android:gravity="center"
                                >
                        </TextView>

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="总记账笔数"
                                android:textColor="@color/gray"
                                android:textColorHint="@color/gray"
                                android:gravity="center"
                                >
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1"
                            >


                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="0"
                                android:id="@+id/totalPay"
                                android:textColor="@color/gray"
                                android:textColorHint="@color/gray"
                                android:gravity="center"
                                >
                        </TextView>

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="总支出"
                                android:textColor="@color/gray"
                                android:textColorHint="@color/gray"
                                android:gravity="center"
                                >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <com.business.travel.app.view.ContentBar
                        android:id="@+id/aboutMe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:content_bar_left_icon="@drawable/ic_me_about"
                        app:content_bar_title="关于差旅记账"
                        app:content_bar_title_color="@color/gray"
                        app:content_bar_right_icon="@drawable/ic_base_right_arrow"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
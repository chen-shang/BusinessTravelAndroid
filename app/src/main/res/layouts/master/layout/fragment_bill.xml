<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.master.fragment.BillFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/teal_800">

            <TextView
                    android:id="@+id/UI_BillFragment_TextView_ProjectName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="24dp"
                    android:drawableTintMode="src_over"
                    android:background="@null"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >
            </TextView>

<!--            <TextView-->
<!--                    android:id="@+id/UI_BillFragment_TextView_Date"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:textColor="@color/white"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    app:layout_constraintTop_toTopOf="parent"-->
<!--                    app:layout_constraintStart_toStartOf="parent"-->
<!--                    android:layout_marginStart="24dp"-->
<!--                    app:layout_constraintVertical_bias="0.85">-->
<!--            </TextView>-->

            <TextView
                    android:id="@+id/UI_BillFragment_TextView_Pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:hint="1234"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.847"
                    app:layout_constraintStart_toEndOf="@+id/UI_BillFragment_TextView_Income"
                    android:layout_marginStart="24dp">
            </TextView>

            <TextView
                    android:id="@+id/UI_BillFragment_TextView_Income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="5432"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.847"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="24dp">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_margin="10dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:background="@color/white">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="差旅开始时间:"
                                android:id="@+id/textView"
                                android:layout_weight="2.5"
                                />

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2021.09.09"
                                android:textColor="@color/teal_800"
                                android:id="@+id/textView_time"
                                android:layout_weight="1"
                                />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:background="@color/white">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="差旅结束时间:"
                                android:id="@+id/textView2"
                                android:layout_weight="2.5"
                                />

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2021.09.09"
                                android:textColor="@color/teal_800"
                                android:id="@+id/textView2_time"
                                android:layout_weight="1"
                                />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:layout_height="wrap_content"
                            android:background="@color/white">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="差旅天数:"
                                android:id="@+id/textView3"
                                android:layout_weight="2.5"
                                />

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="5天"
                                android:textColor="@color/teal_800"
                                android:id="@+id/textView3_time"
                                android:layout_weight="1"
                                />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.yanzhenjie.recyclerview.SwipeRecyclerView
                    android:id="@+id/UI_BillFragment_SwipeRecyclerView_BillList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
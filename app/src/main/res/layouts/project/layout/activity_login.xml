<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_launcher_foreground"
            android:background="@drawable/corners_shape"
            android:id="@+id/ImageView_Icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/UI_MainActivity_Button_WXLogin"
            app:layout_constraintVertical_bias="0.35"/>

    <Button
            android:id="@+id/UI_MainActivity_Button_WXLogin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/button_name_wx_login"
            android:onClick="goMasterActivity"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/corners_shape"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.75"
            />

    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_100"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ImageView_Icon"
            android:layout_marginTop="28dp"/>

    <TextView
            android:text="@string/button_name_account_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UI_MainActivity_TextView_AccountLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/UI_MainActivity_Button_WXLogin"
            android:layout_marginTop="16dp"
            android:layout_marginStart="100dp"/>

    <TextView
            android:text="@string/button_name_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UI_MainActivity_TextView_SignUp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/UI_MainActivity_Button_WXLogin"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
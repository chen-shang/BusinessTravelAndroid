<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.bill.DetailBillActivity"
        android:orientation="vertical">

    <com.business.travel.app.view.ContentBar
            android:id="@+id/topTitleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corners_shape_change"
            app:content_bar_left_icon_mode="back"
            app:content_bar_left_icon="@drawable/ic_base_return"
            app:content_bar_title="账单明细"
            app:content_bar_title_color="@color/white"
            />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/consumerItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="消费内容"
                        app:drawableEndCompat="@drawable/ic_base_right_arrow"/>

                <!--  下面的项目列表数据   -->
                <cn.mtjsoft.www.gridviewpager_recycleview.GridViewPager
                        android:id="@+id/GridViewPager_ConsumptionIconList"
                        android:backgroundTint="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                </cn.mtjsoft.www.gridviewpager_recycleview.GridViewPager>

            </LinearLayout>

            <include layout="@layout/base_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="消费人员"
                        app:drawableEndCompat="@drawable/ic_base_right_arrow"/>

                <cn.mtjsoft.www.gridviewpager_recycleview.GridViewPager
                        android:id="@+id/GridViewPager_MemberIconList"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                </cn.mtjsoft.www.gridviewpager_recycleview.GridViewPager>
            </LinearLayout>

            <include layout="@layout/base_line"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="差旅项目"
                            tools:ignore="RtlHardcoded"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/projectName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="@string/app_name"
                            app:drawableEndCompat="@drawable/ic_base_right_arrow"/>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/base_line"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="消费类型"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/consumerType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="消费类型"
                            />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/base_line"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:text="消费金额"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                    <EditText
                            android:id="@+id/amount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="15sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:background="@null"
                            app:drawableEndCompat="@drawable/ic_base_right_arrow"
                            />
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/base_line"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="消费日期"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:drawableEndCompat="@drawable/ic_base_right_arrow"
                            />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/base_line"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:text="备注"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                    <EditText
                            android:id="@+id/remark"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="15sp"
                            android:background="@null"
                            tools:ignore="RtlHardcoded"
                            app:drawableEndCompat="@drawable/ic_base_right_arrow"
                            />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
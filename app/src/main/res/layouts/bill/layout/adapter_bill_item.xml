<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        tools:context=".ui.activity.bill.fragment.BillItemRecyclerViewAdapter">

    <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="0dp"
            >

        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/UI_BillFragment_BillItemAdapter_Icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_base_placeholder"
                    android:background="@drawable/corners_shape_unselect"
                    />

            <TextView
                    android:id="@+id/UI_BillFragment_BillItemAdapter_ConsumptionItem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    >
            </TextView>

            <TextView
                    android:id="@+id/UI_BillFragment_BillItemAdapter_Amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
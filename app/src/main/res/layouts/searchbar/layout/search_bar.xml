<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!--  用来显示文本的  -->
    <TextView
            android:id="@+id/TextView_SelectedResult"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_height"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/corners_shape_change"
            app:drawableLeftCompat="@drawable/ic_base_sort"
            android:drawablePadding="9dp"
            android:paddingStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            tools:ignore="RtlSymmetry"/>

    <!--  用来显示搜索框的  -->

    <!--  用来显示搜索结果的  -->
    <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            app:iconifiedByDefault="false"
            app:queryHint="请输入项目名称"
            app:closeIcon="@null"
            app:searchHintIcon="@drawable/ic_base_sort"
            app:searchIcon="@drawable/ic_base_sort"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            android:background="@drawable/corners_shape_change"
            android:visibility="invisible"
            />

    <com.yanzhenjie.recyclerview.SwipeRecyclerView
            android:id="@+id/RecyclerView_SearchResultList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/TextView_SelectedResult"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.master.fragment.ProjectFragment"
        android:orientation="vertical">
    <!--头部绿色区域-->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/UI_ProjectFragment_ConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/teal_800">

        <TextView
                android:id="@+id/UI_ProjectFragment_TextView_Title"
                android:text="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="24dp"
                android:textColor="@color/white"/>

        <TextView
                android:id="@+id/UI_ProjectFragment_TextView_Year"
                android:text="2021年度"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="24dp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/UI_ProjectFragment_TextView_Title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <!--  下面的项目列表数据   -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/UI_ProjectFragment_SwipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/UI_ProjectFragment_ConstraintLayout">

        <com.yanzhenjie.recyclerview.SwipeRecyclerView
                android:id="@+id/UI_ProjectFragment_SwipeRecyclerView_ProjectList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/UI_ImageView_Icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/bill_icon_food"
            android:background="@drawable/corners_shape_unselect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/UI_TextView_Description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="名字"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="48dp"
            app:layout_constraintTop_toBottomOf="@+id/UI_ImageView_Icon"/>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.business.travel.app">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.BusinessTravelAndroid"
            android:fullBackupContent="true">

        <activity android:name=".ui.activity.log.ChangeLogActivity"/>
        <activity android:name=".ui.activity.login.LoginActivity"/>
        <activity android:name=".ui.activity.bill.DetailBillActivity"/>
        <activity android:name=".ui.activity.item.member.EditMemberActivity"/>
        <activity android:name=".ui.activity.item.AddItemActivity"/>
        <activity android:name=".ui.activity.item.consumption.EditConsumptionActivity"/>
        <activity android:name=".ui.activity.master.MasterActivity"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".ui.activity.bill.AddBillActivity"
                android:windowSoftInputMode="stateHidden|adjustPan"/>
        <activity android:name=".ui.TestActivity"/>
    </application>

</manifest>